<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.moa.member.mapper.MemberMapper">
    <update id="updateFcmToken">
        UPDATE member
        SET fcm_token = #{FcmToken}
        WHERE member_id = #{memberId}
    </update>
    <delete id="deleteFcmToken">
        UPDATE member
        SET fcm_token = NULL
        WHERE member_id = #{memberId}
    </delete>
    <insert id="insert" parameterType="org.moa.member.entity.Member" useGeneratedKeys="true" keyProperty="memberId">
        INSERT INTO member (member_type,
                            email,
                            password,
                            name,
                            id_card_number,
                            created_at,
                            updated_at)
        VALUES (#{memberType},
                #{email},
                #{password},
                #{name},
                #{idCardNumber},
                #{createdAt},
                #{updatedAt})
    </insert>
    <select id="searchTokenById" resultType="string">
        SELECT fcm_token
        FROM member
        WHERE member_id = #{memberId}
    </select>
    <select id="getByEmail" resultType="org.moa.member.entity.Member">
        SELECT *
        FROM member
        WHERE email = #{email}
    </select>
    <select id="getByMemberId" resultType="org.moa.member.entity.Member">
        SELECT *
        FROM member
        WHERE member_id = #{memberId}
    </select>
</mapper>
