<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.moa.trip.mapper.ExpenseMapper">
    <insert id="insert" parameterType="org.moa.trip.entity.Expense" useGeneratedKeys="true" keyProperty="expenseId">
        INSERT INTO expense(trip_id,
                            member_id,
                            expense_name,
                            expense_date,
                            amount,
                            location,
                            settlement_completed,
                            created_at,
                            updated_at
        )
        VALUES (#{tripId},
                #{memberId},
                #{expenseName},
                #{expenseDate},
                #{amount},
                #{location},
                #{settlementCompleted},
                #{createdAt},
                #{updatedAt}
        )
    </insert>
    <select id="searchByExpenseId" resultType="org.moa.trip.entity.Expense">
        SELECT *
        FROM expense
        WHERE expense_id = #{expenseId}
    </select>
    <update id="updateSettlementCompleted">
        UPDATE expense
        SET settlement_completed = #{completed}
        WHERE expense_id = #{expenseId}
    </update>
</mapper>
