<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.moa.trip.mapper.TripMemberMapper">
    <insert id="insert" parameterType="org.moa.trip.entity.TripMember" useGeneratedKeys="true" keyProperty="tripMemberId">
        INSERT INTO TRIP_MEMBER (
                                   trip_id,
                                   member_id,
                                   role,
                                   joined_at
        )
        VALUES (
                 #{tripId},
                 #{memberId},
                 #{role},
                 #{joinedAt}
                 )
    </insert>
    <select id="existMemberInTrip" resultType="int">
        SELECT COUNT(*)
        FROM TRIP_MEMBER
        WHERE trip_id = #{tripId}
        AND member_id = #{memberId}
    </select>
    <select id="searchTripMembersByTripId" resultType="org.moa.trip.entity.TripMember">
        SELECT *
        FROM TRIP_MEMBER
        WHERE trip_id = #{tripId}
    </select>

    <select id="isMemberOfTrip" resultType="int">
        SELECT COUNT(*)
        FROM trip_member
        WHERE trip_id = #{tripId} AND member_id = #{memberId}
    </select>
</mapper>