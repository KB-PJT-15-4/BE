<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.moa.trip.mapper.TripRecordImageMapper">

    <!-- 이미지 저장 -->
    <insert id="insertTripRecordImage" parameterType="org.moa.trip.entity.TripRecordImage">
        INSERT INTO TRIP_RECORD_IMAGES (record_id, image_url)
        VALUES (#{recordId}, #{imageUrl})
    </insert>

    <!-- 이미지 삭제 -->
    <delete id="deleteImagesByRecordId">
        DELETE FROM TRIP_RECORD_IMAGES
        WHERE record_id = #{recordId}
    </delete>
</mapper>