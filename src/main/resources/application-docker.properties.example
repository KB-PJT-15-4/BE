# ===================================
# Docker 환경 설정 예제
# ===================================
# 이 파일을 복사하여 application-docker.properties로 만들어 사용하세요
# cp application-docker.properties.example application-docker.properties

# JDBC MySQL - Docker 컨테이너
jdbc.driver=com.mysql.cj.jdbc.Driver
jdbc.url=jdbc:mysql://mysql:3306/moa?useSSL=false&serverTimezone=Asia/Seoul&allowPublicKeyRetrieval=true&characterEncoding=UTF-8&useUnicode=true
jdbc.username=root
jdbc.password=YOUR_PASSWORD_HERE

# Redis - Docker 컨테이너
redis.host=redis
redis.port=6379

# Security Secret Key
my.security.secret-key=YOUR_SECRET_KEY_HERE

# Firebase (Docker 환경)
firebase.key-path=/usr/local/tomcat/firebase/moa-firebase-service-account-key.json
firebase.project-id=kb-pjt-moa
firebase.bucket-name=kb-pjt-moa.firebasestorage.app

# Server Environment
server.env=production
server.use.secure.cookie=true

# Spring Profiles
spring.profiles.active=docker
